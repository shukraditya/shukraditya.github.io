---
interface Props {
  size?: string;
}

const { size = "w-5 h-5" } = Astro.props;

interface SocialLink {
  name: string;
  href: string;
  icon: string;
}

const socials: SocialLink[] = [
  {
    name: 'GitHub',
    href: 'https://github.com/shukraditya',
    icon: '<path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>'
  },
  {
    name: 'X',
    href: 'https://x.com/shookscooks/',
    icon: '<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>'
  },
  {
    name: 'LinkedIn',
    href: 'https://www.linkedin.com/in/shukraditya-bose/',
    icon: '<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/>'
  },
  {
    name: 'Email',
    href: 'mailto:shukra12bose@gmail.com',
    icon: '<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/>'
  }
];
---

<div class="flex items-center gap-4">
  {socials.map((social) => (
    <a
      href={social.href}
      target="_blank"
      rel="noopener noreferrer"
      class="text-secondary hover:text-ink"
      aria-label={social.name}
    >
      <svg
        class={size}
        fill={social.name === 'X' ? 'currentColor' : 'none'}
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        set:html={social.icon}
      />
    </a>
  ))}
</div>
