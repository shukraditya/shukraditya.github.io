---
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  current?: 'home' | 'writing' | 'about';
}

const { current } = Astro.props;

const navItems = [
  { href: '/', label: 'Home', id: 'home' },
  { href: '/writing', label: 'Writing', id: 'writing' },
  { href: '/about', label: 'About', id: 'about' },
];
---

<nav class="fixed top-0 left-0 right-0 h-52px bg-paper/80 backdrop-blur-xl border-b border-border z-50">
  <div class="px-4 sm:px-6 lg:px-8 h-full flex items-center justify-between relative">
    <!-- Logo - far left -->
    <a href="/" class="flex items-center" aria-label="Home">
      <div class="w-8 h-8 border border-border rounded flex items-center justify-center text-secondary font-display text-sm hover:border-accent hover:text-accent transition-none">
        S
      </div>
    </a>

    <!-- Nav links - centered on screen -->
    <div class="absolute left-1/2 -translate-x-1/2 flex items-center gap-4 sm:gap-6">
      {navItems.map((item) => (
        <a
          href={item.href}
          class={`text-label font-sans uppercase tracking-wider text-secondary hover:text-ink transition-none ${current === item.id ? 'text-ink font-medium' : ''}`}
        >
          {item.label}
        </a>
      ))}
    </div>

    <!-- Theme toggle - far right -->
    <ThemeToggle />
  </div>
</nav>
